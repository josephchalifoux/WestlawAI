{
  "name": "pleadings-pro-bootstrap",
  "version": "0.0.3",
  "private": true,
  "engines": { "node": ">=18" },
  "scripts": {
    "prebuild": "node -e \"require('fs').mkdirSync('.gen',{recursive:true}); require('fs').writeFileSync('.gen/start.js', process.env.BOOTSTRAP_JS);\"",
    "clean:configs": "node -e \"const fs=require('fs'),p=require('path');function del(f){try{fs.rmSync(f,{force:true});console.log('Removed',f)}catch{}}function walk(d){if(!fs.existsSync(d))return;for(const e of fs.readdirSync(d,{withFileTypes:true})){const fp=p.join(d,e.name);if(e.isDirectory())walk(fp);else if(/^next\\.config\\.(t|j)s$/.test(e.name))del(fp);}}walk(process.cwd());\"",
    "build": "node .gen/start.js && npm run clean:configs && (npm --prefix apps/web ci || npm --prefix apps/web install) && npm --prefix apps/web run build",
    "start": "npm --prefix apps/web start"
  }
}
